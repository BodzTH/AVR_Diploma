#include "led.h"
#include "lcd.h"
#include "buzzer.h"
#include "hc_sr_04.h"

int main(void)
{
	LEDS_init();
	LCD_init();
	Buzzer_init();
	Ultrasonic_init();
	uint16 ultrasonic_distance = 6;
	while (1)
	{
//		ultrasonic_distance = Ultrasonic_readDistance();
		if (ultrasonic_distance > 20)
		{
			Buzzer_off();
			LED_off(LED_RED);
			LED_off(LED_GREEN);
			LED_off(LED_BLUE);
		}
		else if (ultrasonic_distance > 15)
		{
			Buzzer_off();
			LED_on(LED_RED);
			LED_off(LED_GREEN);
			LED_off(LED_BLUE);
		}
		else if (ultrasonic_distance > 10)
		{
			LED_on(LED_RED);
			LED_on(LED_GREEN);
			LED_off(LED_BLUE);
		}
		else if (ultrasonic_distance > 5)
		{
			LED_on(LED_RED);
			LED_on(LED_GREEN);
			LED_on(LED_BLUE);

		}
	}
}
